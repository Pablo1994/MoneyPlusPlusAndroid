<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:id="@+id/textViewMontoAhorroProg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/str_monto"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="25sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/editTextMontoAhorroProg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ffa8ded6"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="number"
        android:layout_below="@+id/textViewMontoAhorroProg"
        android:layout_alignLeft="@+id/textViewFrecPerFecha"
        android:layout_alignStart="@+id/textViewFrecPerFecha" />

    <TextView
        android:id="@+id/textViewDescAhorroProg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/str_descripcion"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="25sp"
        android:textStyle="normal"
        android:layout_below="@+id/editTextMontoAhorroProg"
        android:layout_alignLeft="@+id/textViewMontoAhorroProg"
        android:layout_alignStart="@+id/textViewMontoAhorroProg" />

    <EditText
        android:id="@+id/editTextDescAhorroProg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:background="#ffa8ded6"
        android:inputType="text"
        android:layout_below="@+id/textViewDescAhorroProg" />

    <TextView
        android:id="@+id/textViewFrecAhorroProg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frecuencia: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="25sp"
        android:textStyle="normal"
        android:layout_below="@+id/editTextDescAhorroProg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:id="@+id/radio_group_ahorro_prog"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textViewFrecAhorroProg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/radioButtonQuinFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Quincenal" />

        <RadioButton
            android:id="@+id/radioButtonMensFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Mensual" />

    </RadioGroup>

    <TextView
        android:id="@+id/textViewFecAhorroProg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_fecha"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="25sp"
        android:textStyle="normal"
        android:layout_below="@+id/radio_group_ahorro_prog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/textViewFecha2AhorroProg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_fecha2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="25sp"
        android:textStyle="normal"
        android:visibility="gone"
        android:layout_below="@+id/editTextFecAhorroProg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/editTextFecha2AhorroProg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ffa8ded6"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="number"
        android:visibility="gone"
        android:layout_below="@+id/textViewFecha2AhorroProg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editTextFecAhorroProg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ffa8ded6"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="number"
        android:layout_below="@+id/textViewFecAhorroProg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar Ahorro Programado"
        android:id="@+id/buttonAhorroProgramado"
        android:background="@drawable/round_corners_normal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

</RelativeLayout>