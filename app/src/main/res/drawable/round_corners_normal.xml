<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff9fcdc5" />
            <gradient android:angle="-90" android:startColor="#ff8aa3a1" android:endColor="#ff90d5ca"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffb2e5dc" />
            <solid android:color="#ff84c7bd"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffc3fbf0" />
            <gradient android:angle="-90" android:startColor="#ffa8ded6" android:endColor="#ff97e4d8" />
        </shape>
    </item>
</selector>