<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3059D6" />
            <gradient android:angle="-90" android:startColor="#001A4C" android:endColor="#050A14"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1947D1" />
            <solid android:color="#3059D6"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0033CC" />
            <gradient android:angle="-90" android:startColor="#5E7EDF" android:endColor="#00165A" />
        </shape>
    </item>
</selector>