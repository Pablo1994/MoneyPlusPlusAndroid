<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff79453b" />
            <gradient android:angle="-90" android:startColor="#ffb02525" android:endColor="#ff9a4133"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff8a0e09" />
            <solid android:color="#ff85100b"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffa02a21" />
            <gradient android:angle="-90" android:startColor="#ffba2f23" android:endColor="#ff85070b" />
        </shape>
    </item>
</selector>